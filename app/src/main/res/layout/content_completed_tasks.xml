<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CompletedTasks"
    tools:showIn="@layout/activity_completed_tasks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/completed_task_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="deleteAllTasks"
        tools:itemCount="5"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="42dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/deleteAllButton"
        android:layout_width="64dp"
        android:layout_height="61dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="48dp"
        android:clickable="true"
        android:onClick="deleteAllTasks"
        app:backgroundTint="#FFA55B"
        app:fabCustomSize="60dp"
        app:fabSize="auto"
        app:layout_behavior="com.valdio.valdioveliu.floatingactionbuttonproject.Scrolling_Floating_Action_Button.FAB_Hide_on_Scroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="50dp"
        app:rippleColor="@color/navyBlue"
        app:srcCompat="@drawable/delete_icon" />


</android.support.constraint.ConstraintLayout>