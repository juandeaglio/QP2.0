<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_card"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/card_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="#ffffff" />

        <TextView
            android:id="@+id/card_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/card_check_box"
            android:layout_toRightOf="@id/card_check_box"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins"
            app:layout_constraintStart_toEndOf="@+id/card_check_box"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_priority"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/card_due_date"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/card_task_name"
            android:layout_toRightOf="@id/card_task_name"
            android:paddingStart="10dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/card_due_date"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_task_name"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/card_check_box"
            android:layout_toRightOf="@id/card_check_box"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins"
            app:layout_constraintStart_toStartOf="@+id/card_task_name"
            app:layout_constraintTop_toBottomOf="@+id/card_task_name" />

        <TextView
            android:id="@+id/card_time"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_task_name"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/card_check_box"
            android:layout_toRightOf="@id/card_check_box"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins"
            app:layout_constraintBottom_toBottomOf="@+id/card_due_date"
            app:layout_constraintStart_toEndOf="@+id/card_due_date"
            app:layout_constraintTop_toTopOf="@+id/card_due_date" />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
