<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Customization"
    tools:showIn="@layout/activity_customization">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fake_card_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="704dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/fake_card_check_box1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="#ffffff" />

        <TextView
            android:id="@+id/fake_card_task_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/card_check_box"
            android:layout_toRightOf="@id/card_check_box"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins"
            app:layout_constraintStart_toEndOf="@+id/fake_card_check_box1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fake_card_priority1"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/card_due_date"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/fake_card_task_name1"
            android:layout_toRightOf="@id/fake_card_task_name1"
            android:paddingStart="10dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/fake_card_due_date1"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fake_card_task_name1"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/fake_card_check_box1"
            android:layout_toRightOf="@id/fake_card_check_box1"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins"
            app:layout_constraintStart_toStartOf="@+id/fake_card_task_name1"
            app:layout_constraintTop_toBottomOf="@+id/fake_card_task_name1" />

        <TextView
            android:id="@+id/fake_card_time1"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fake_card_task_name1"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/card_check_box"
            android:layout_toRightOf="@id/card_check_box"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins"
            app:layout_constraintBottom_toBottomOf="@+id/fake_card_due_date1"
            app:layout_constraintStart_toEndOf="@+id/fake_card_due_date1"
            app:layout_constraintTop_toTopOf="@+id/fake_card_due_date1" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>