<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reminder_card"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/card_reminder_name"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:fontFamily="@font/poppins" />

        <TextView
            android:id="@+id/card_reminder_time"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_reminder_name"

            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/card_check_box"
            android:layout_toRightOf="@id/card_check_box"
            android:text="Time"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_reminder_name"
            tools:fontFamily="@font/poppins" />

        <TextView
            android:id="@+id/card_reminder_interval"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_reminder_name"
            android:layout_marginStart="8dp"

            android:text="Interval"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins"
            app:layout_constraintBottom_toBottomOf="@+id/card_reminder_time"
            app:layout_constraintStart_toEndOf="@id/card_reminder_time"
            app:layout_constraintTop_toBottomOf="@id/card_reminder_name"
            app:layout_constraintVertical_bias="1.0"
            tools:fontFamily="@font/poppins" />

        <Switch
            android:id="@+id/reminder_card_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:checked="true"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toEndOf="@id/card_reminder_name"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
